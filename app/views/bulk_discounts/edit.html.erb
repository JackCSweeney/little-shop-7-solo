<%= form_with url: merchant_bulk_discount_path(@merchant, @bulk_discount), method: :patch, local: true, data: {turbo: false} do |form|%>
  <%= form.label :quantity_thresh, "Quantity Threshold" %>
  <%= form.text_field :quantity_thresh, value: @bulk_discount.quantity_thresh %><br>
  <%= form.label :percentage, "Percentage"%>
  <%= form.text_field :percentage, value: @bulk_discount.percentage %><br>
  <%= form.submit %>
<% end %>